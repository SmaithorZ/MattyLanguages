@model List<PhrasesPL>

<div class="container mt-5">
    <h1 class="mb-4 text-center">Polish Common Phrases</h1>

    <div class="m-4 text-start">
        <a href="@Url.Action("Index", "Polish", new { language = "Polish" })" class="btn btn-success m-2">
            Go Back
        </a>
    </div>

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th class="text-light">Language</th>
                <th class="text-light">Phrases</th>
                <th class="text-light">Translation</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var phrase in Model)
            {
                <tr>
                    <td class="text-light">
                        <img src="https://upload.wikimedia.org/wikipedia/en/thumb/1/12/Flag_of_Poland.svg/800px-Flag_of_Poland.svg.png?20231119024730"
                             alt="Polish Flag" style="width: 20px; height: auto; margin-right: 5px;" />
                        @phrase.Language
                    </td>
                    <td class="text-light">@phrase.Text</td>
                    <td class="text-light">@phrase.Translation</td>
                </tr>
            }
        </tbody>
    </table>
</div>
